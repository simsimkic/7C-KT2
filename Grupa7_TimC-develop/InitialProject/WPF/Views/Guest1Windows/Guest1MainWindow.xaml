        <Button Content="POMERANJE REZERVACIJE" HorizontalAlignment="Left" Margin="561,274,0,0" VerticalAlignment="Top" Width="369" Height="132" Click="AccommodationReservationReschedulingRequest_Click"/>

        <Button Content="OTKAZIVANJE REZERVACIJE" HorizontalAlignment="Left" Margin="116,444,0,0" VerticalAlignment="Top" Width="369" Height="132" Click="AccommodationReservationCancellation_Click"/>

        <Button Content="Odjavi se" HorizontalAlignment="Left" Margin="943,674,0,0" VerticalAlignment="Top" Click="SignOut_Click"/>
        <Label Content="(klikom na ovo dugme bićete odjavljeni sa sistema)" HorizontalAlignment="Left" Margin="722,694,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
